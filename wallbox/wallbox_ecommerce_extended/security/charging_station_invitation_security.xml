<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Charging Station Invitation Security Rule -->
        <record id="rule_charging_station_invitation_user_access" model="ir.rule">
            <field name="name">Charging Station Invitation: User Access</field>
            <field name="model_id" ref="model_charging_station_invitation"/>
            <field name="domain_force">['|', ('sender_id', '=', user.partner_id.id), ('receiver_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read">True</field>
            <field name="perm_write">True</field>
            <field name="perm_create">True</field>
            <field name="perm_unlink">True</field>
        </record>

        <record id="rule_charging_station_invitation_admin_access" model="ir.rule">
            <field name="name">Charging Station Invitation: admin Access</field>
            <field name="model_id" ref="model_charging_station_invitation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('wallbox_integration.group_wallbox_admin'))]"/>
            <field name="perm_read">True</field>
            <field name="perm_write">True</field>
            <field name="perm_create">True</field>
            <field name="perm_unlink">True</field>
        </record>
    </data>
</odoo>

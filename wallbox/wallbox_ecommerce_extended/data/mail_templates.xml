<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Invitation Request -->
    <record id="email_template_request_invitation" model="mail.template">
        <field name="name">Charging Station Request</field>
        <field name="model_id" ref="model_charging_station_invitation"/>
        <field name="subject">New Charging Station Access Request for {{object.charging_station_name if object.charging_station_id else object.charging_station_name}}</field>
        <field name="email_from">{{ object.sender_id.email or object.sender_id.user_id.email }}</field>
        <field name="email_to">{{ object.receiver_id.email or object.email }}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
<div style="font-family:Arial, sans-serif; font-size:14px;">
    <p>Hello 
        <t t-if="object.receiver_id.name">
            <t t-out="object.receiver_id.name or ''">Brandon Freeman</t>,
        </t>
    </p>

    <p>
        You have received a new access request from <b><t t-out="object.sender_id.name or ''">Azere Interior</t></b>
        for your Charging Station with Charger ID: <b><t t-out="object.charging_station_name or ''">123</t></b>.
    </p>

    <p>
        <b>Requester Details:</b><br/>
        Name: <t t-out="object.sender_id.name or ''"></t><br/>
        Email: <t t-out="object.sender_id.email or ''"></t><br/>
        Mobile: <t t-out="object.sender_id.mobile or ''"></t>
    </p>

    <br />
    Click to Login : <a href="https://qariqa.qariqa.com" target="new">qariqa.qariqa.com</a>
    <br /><br />

    Thanks &amp; Regards.
</div>
        </field>
    </record>


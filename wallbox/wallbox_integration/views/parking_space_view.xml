<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_parking_space_list" model="ir.ui.view">
        <field name="name">parking.space.list</field>
        <field name="model">parking.space</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="building_id"/>
                <field name="condominium_id"/>
                <field name="parking_type"/>
                <field name="capacity"/>
                <field name="rental_status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_parking_space_form" model="ir.ui.view">
        <field name="name">parking.space.form</field>
        <field name="model">parking.space</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_charging_stations" type="object"
                            class="oe_stat_button" icon="fa-plug">
                            <field name="number_of_charging_stations" widget="statinfo"
                                string="Charging Stations"/>
                        </button>
                        <!-- <button name="action_view_wallbox_users" type="object"
                            class="oe_stat_button" icon="fa-user">
                            <field name="number_of_users" widget="statinfo"
                                string="Wallbox Users"/>
                        </button> -->
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="condominium_id"/>
                            <field name="building_id"/>
                        </group>
                        <group>
                            <field name="parking_type"/>
                            <field name="total_area"/>
                            <field name="capacity"/>
                            <field name="assigned_or_shared"/>
                        </group>
                        <group>
                            <field name="owner_id"/>
                            <field name="rental_status"/>
                            <field name="monthly_fee" invisible="rental_status == 'owned'"/>
                        </group>
                        <group>
                            <field name="access_control_system"/>
                            <field name="ev_charging_station"/>
                            <field name="handicap_accessibility"/>
                        </group>
                        <group>
                            <field name="maintenance_records"/>
                            <field name="last_inspection_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Charging Stations">
                            <field name="charging_station_ids" widget="one2many_list"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_parking_space" model="ir.actions.act_window">
        <field name="name">Parking Spaces</field>
        <field name="res_model">parking.space</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="parking_space_menu" name="Parking Spaces" parent="wallbox_integration.property_menu" action="action_parking_space" groups="wallbox_integration.group_wallbox_admin,wallbox_integration.group_wallbox_condo_owner"/>

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="error_log_view_form" model="ir.ui.view">
        <field name="name">error.log.form</field>
        <field name="model">error.log</field>
        <field name="arch" type="xml">
            <form string="Error Log">
                <sheet>
                    <group>
                        <field name="create_date" readonly="1"/>
                        <field name="user_id" readonly="1"/>
                        <field name="api_name" readonly="1"/>
                        <field name="error_code" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Parameters">
                            <field name="json_parameters" readonly="1"/>
                        </page>
                        <page string="Error Details">
                            <field name="error_description" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="error_log_view_list" model="ir.ui.view">
        <field name="name">error.log.list</field>
        <field name="model">error.log</field>
        <field name="arch" type="xml">
            <list string="Error Logs">
                <field name="create_date"/>
                <field name="api_name"/>
                <field name="user_id"/>
                <field name="error_code"/>
                <field name="json_parameters" optional="hide"/>
                <field name="error_description"/>
            </list>
        </field>
    </record>

    <record id="action_error_log" model="ir.actions.act_window">
        <field name="name">Error Logs</field>
        <field name="res_model">error.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_error_log"
              name="Mobile API Logs"
              parent="wallbox_integration.menu_configuration"
              action="action_error_log"
              sequence="100"/>

</odoo>

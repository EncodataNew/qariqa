<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ==================== MAIL TEMPLATES (RECORDS) ==================== -->
    <data noupdate="0">

        <!-- Password Reset OTP Template -->
        <record id="mail_template_password_reset_otp" model="mail.template">
            <field name="name">Password Reset OTP</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="subject">Your password reset code</field>
            <field name="email_from">{{ (object.company_id.email_formatted or user.email_formatted) }}</field>
            <field name="email_to">{{ object.email_formatted }}</field>
            <field name="body_html" type="html">
                <div style="font-family:Arial, Helvetica, sans-serif; font-size:14px; color:#333;">
                    <p>Dear <t t-out="ctx.get('user_name') or object.name"/>,</p>
                    <p>
                        You have requested to reset your password.<br/>
                        Your OTP code is:
                        <span style="display:inline-block; padding:8px 16px; margin:8px 0; font-size:16px;
                            font-weight:bold; color:#ffffff; background:#007bff; border-radius:4px;">
                            <t t-out="ctx.get('otp')"/>
                        </span>
                    </p>
                    <p>This code will expire in <strong>2 minutes</strong>.</p>
                    <p>If you did not request this, please ignore this email.</p>
                    <p style="margin-top:20px;">Regards,<br/><t t-out="object.company_id.name or &quot;Support Team &quot;"/></p>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">{{ object.partner_id.lang }}</field>
        </record>

    </data>

</odoo>

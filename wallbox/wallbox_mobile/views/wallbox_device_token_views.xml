<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model='ir.ui.view' id='wallbox_device_token_list'>
        <field name='name'>wallbox.device.token.list</field>
        <field name='model'>wallbox.device.token</field>
        <field name='arch' type='xml'>
            <list create="0" edit="0" delete="0">
                <field name='user_id'/>
                <field name='token'/>
                <field name='platform'/>
                <field name='active'/>
                <!-- <button name="send_test_notification" string="Send Test Notification" type="object"/> -->
            </list>
        </field>
    </record>

    <record model='ir.ui.view' id='wallbox_device_token_form'>
        <field name='name'>wallbox.device.token.form</field>
        <field name='model'>wallbox.device.token</field>
        <field name='arch' type='xml'>
            <form create="0" delete="0">
                <header>
                    <button name="send_test_notification" string="Send Test Notification" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name='user_id' readonly="1"/>
                            <field name='token' readonly="1"/>
                            <field name='platform' readonly="1"/>
                            <field name='active' readonly="1"/>
                            <field name="message" readonly="0"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wallbox_device_token" model="ir.actions.act_window">
        <field name="name">Wallbox Mobile Device Tokens</field>
        <field name="res_model">wallbox.device.token</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_wallbox_device_token" name="Wallbox Device Token" parent="wallbox_integration.menu_configuration" action="action_wallbox_device_token" sequence="11"/>

</odoo>
